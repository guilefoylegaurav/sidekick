{
  "name": "koan",
  "version": "0.1.0",
  "description": "Browsing experience sidekick",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://*.britannica.com/*",
    "https://*.medium.com/*",
    "https://*.substack.com/*",
    "https://*.ghost.io/*",
    "https://*.blogspot.com/*",
    "https://*.wordpress.com/*",
    "https://*.github.com/*",
    "https://*.gitlab.com/*",
    "https://stackoverflow.com/*",
    "https://developer.mozilla.org/*",
    "https://*.coursera.org/*",
    "https://*.udemy.com/*",
    "https://*.khanacademy.org/*",
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://*.bbc.com/*",
    "https://*.nytimes.com/*",
    "https://*.theguardian.com/*",
    "https://*.reuters.com/*"
  ], 
   "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/scripts/contentScript.js"
      ]
    }
  ],
  "action": {
    "default_title": "koan",
    "default_icon": "src/icons/icon.png"
  },
  "icons": {
    "16": "src/icons/icon.png",
    "48": "src/icons/icon.png",
    "128": "src/icons/icon.png"
  },
  "side_panel": {
    "default_path": "src/pages/sidepanel.html"
  },
  "background": {
    "service_worker": "src/scripts/service-worker.js"
  },
  "manifest_version": 3
}
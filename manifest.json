{
  "name": "not clippy",
  "version": "0.1.0",
  "description": "Browsing experience sidekick",
  "permissions": ["sidePanel", "storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://sidekick-backend-gold.vercel.app/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/scripts/contentScript.js"
      ]
    }
  ],
  "action": {
    "default_title": "not clippy",
    "default_icon": "src/icons/icon.png"
  },
  "icons": {
    "16": "src/icons/icon.png",
    "48": "src/icons/icon.png",
    "128": "src/icons/icon.png"
  },
  "side_panel": {
    "default_path": "src/pages/sidepanel.html"
  },
  "background": {
    "service_worker": "src/scripts/service-worker.js"
  },
  "manifest_version": 3
}